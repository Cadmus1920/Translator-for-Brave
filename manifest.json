{
  "manifest_version": 3,
  "name": "Translator for Brave",
  "version": "1.4.3",
  "description": "Popup translator extension for Brave and Chromium browsers",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "notifications"               // ‚Üê added
  ],
  "host_permissions": ["https://translate.googleapis.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {}
}
