{
  "manifest_version": 3,
  "name": "Translator Bubble",
  "version": "1.3.0",
  "description": "Right-click selected text to translate it in a resizable popup bubble.",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "host_permissions": ["https://translate.googleapis.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
